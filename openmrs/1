apiVersion: apps/v1
kind: Deployment
metadata:
  name: openmrs-deploy
spec:
  replicas: 3
  selector:
    matchLabels:
      app: openmrs
  minReadySeconds: 30
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1
  template:
    metadata:
      labels:
        app: openmrs
    spec:
      containers:
      - name: openmrs
        image: veerendradevops/openmrs:2.1.2
        ports:
        - containerPort: 8080
